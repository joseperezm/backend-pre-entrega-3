        <input type="search" class="form-control" placeholder="Buscar productos" aria-label="Buscar" name="query">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </div>
    </form>
    </div>
  </div>
